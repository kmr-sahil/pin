
<% include ./partials/header.ejs %>
  <div class="bg-zinc-800 profile w-full min-h-screen">

        <form id="uploadform" class="" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>

        <div class="prodets py-5 text-white flex flex-col gap-2 justify-center items-center">
            <div class="relative">
                <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 bg-zinc-300 flex items-center justify-center rounded-full">
                    <i class="text-zinc-700 ri-pencil-line"></i>
                </span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden"> 
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
                </div>
            </div>
            
            <h1 class="text-3xl font-semibold ">Demo</h1>
            <h3 class="text-md">@username</h3>
            <a href="/edit" class="px-10 py-3 bg-zinc-700 rounded-full text-xs">Edit</a>
            <a href="/add" class="bg-red-500 rounded-full px-4 py-2">Add new Post</a>
        </div>


        <div class="cards flex flex-wrap gap-5 px-10 text-white">
            <div class="card">
                <div class="w-52 h-52 rounded-lg bg-zinc-300 overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
                </div>
                <a href="/show/posts" class="text-xl font-semibold mt-2">Your Uploaded Pins</a>
                <h5 class="text-sm font-medium"><%= user.posts.length %></h5>
            </div>
            
        </div>
  </div>

  <script>

    document.querySelector("#uploadicon").addEventListener("click", function(){
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change", function(){
        document.querySelector("#uploadform").submit();
    })
</script>

<% include ./partials/footer.ejs %>