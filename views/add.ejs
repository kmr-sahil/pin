
<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 text-white">
        <h1 class="text-xl p-4">Create a new post</h1>
        <hr>
        <form action="/createpost" method="post" enctype="multipart/form-data" class="flex flex-col gap-4 p-4">
            <input class="w-1/3 p-2 rounded-md" type="file" name="postimage">
            <input class="w-1/3 p-2 rounded-md text-black" placeholder="Title" type="text" name="title">
            <textarea class="w-1/3 h-24 p-2 rounded-md text-black" placeholder="Description" name="description"></textarea>
            <input class="w-1/3 p-2 rounded-md bg-red-500" type="submit" value="Create Post">
        </form>
    </div>
